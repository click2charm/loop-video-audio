{
  "name": "loop-video-to-audio",
  "version": "1.2.0",
  "description": "Loop a short video to match audio length, merge to MP4, with text & logo overlay",
  "main": "main.js",
  "author": "Preecha",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir --publish=never",
    "dist": "electron-builder --publish=never",
    "dist:mac": "electron-builder --mac dmg --publish=never",
    "dist:win": "electron-builder --win nsis --publish=never"
  },
  "build": {
    "appId": "com.preecha.loopvideoaudio",
    "productName": "Loop Video to Audio",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "renderer.html",
      "license.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.video",
      "target": [{"target": "dmg"}],
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "extraResources": [
        {
          "from": "node_modules/@ffmpeg-installer/darwin-${arch}",
          "to": "ffmpeg",
          "filter": ["**/*"]
        },
        {
          "from": "node_modules/@ffprobe-installer/darwin-${arch}",
          "to": "ffprobe",
          "filter": ["**/*"]
        }
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "extraResources": [
        {
          "from": "node_modules/@ffmpeg-installer/win32-x64",
          "to": "ffmpeg",
          "filter": ["**/*"]
        },
        {
          "from": "node_modules/@ffprobe-installer/win32-x64",
          "to": "ffprobe",
          "filter": ["**/*"]
        }
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    }
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffprobe-installer/ffprobe": "^2.1.2"
  },
  "devDependencies": {
    "electron": "^32.0.0",
    "electron-builder": "^25.1.8",
    "firebase-admin": "^13.6.0"
  }
}
