{
  "name": "loop-video-to-audio",
  "version": "1.0.1",
  "description": "Loop a short video to match audio length, merge to MP4, with text & logo overlay",
  "main": "main.js",
  "author": "Preecha",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir --publish=never",
    "dist": "electron-builder --publish=never",
    "dist:mac": "electron-builder --mac dmg --publish=never",
    "dist:win": "electron-builder --win nsis --publish=never"
  },
  "build": {
    "appId": "com.preecha.loopvideoaudio",
    "productName": "Loop Video to Audio",
    "directories": { "output": "dist" },
    "files": [
      "**/*",
      "!dist",
      "!node_modules/.cache"
    ],
    "extraResources": [
      { "from": "assets/", "to": "assets", "filter": ["**/*"] }
    ],
    "mac": {
      "category": "public.app-category.video",
      "target": [
        { "target": "dmg" }
      ]
      /* ถ้ามีไฟล์ไอคอนจริงค่อยเปิดบรรทัดด้านล่าง
      ,"icon": "assets/icon-mac.icns"
      */
    },
    "win": {
      "target": [
        { "target": "nsis", "arch": ["x64"] }
      ]
      /* ถ้ามีไฟล์ไอคอนจริงค่อยเปิดบรรทัดด้านล่าง
      ,"icon": "assets/icon-win.ico"
      */
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    }
  },
  "dependencies": {
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0"
  },
  "devDependencies": {
    "electron": "^32.0.0",
    "electron-builder": "^25.1.8"
  }
}
